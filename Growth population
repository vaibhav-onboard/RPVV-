pop = [50, 1450, 1400, 1700, 1500, 600, 1200]
tot_pop = 0
years = 0
growth_rate = 2.5
i = 0
while i < len(pop):
    tot_pop += pop[i]
    new_pop = pop[i] * (1 + growth_rate / 100)
    pop[i] = new_pop
    growth_rate -= 0.1
    i += 1
    years += 1
print("Current total population is:", tot_pop ,"million")
print("Years until max population is:", years)
print("Max population is:", tot_pop ,"million")
